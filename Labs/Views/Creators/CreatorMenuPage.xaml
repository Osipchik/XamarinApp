<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helpers="clr-namespace:Labs.Helpers;assembly=Labs"
             mc:Ignorable="d"
             x:Class="Labs.Views.Creators.CreatorMenuPage"
             Title="{helpers:Translate CreatorTitle}"
             BackgroundColor="{DynamicResource PageBackGroundColor}">

    <ContentPage.Resources>
        <Style x:Key="ImageButtonStyle" TargetType="ImageButton">
            <Setter Property="Aspect" Value="AspectFit"/>
            <Setter Property="WidthRequest" Value="36"/>
            <Setter Property="HeightRequest" Value="36"/>
            <Setter Property="Opacity" Value="0.3"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{helpers:Translate Save}"
                     Order="Secondary"
                     Command="{Binding SaveTestCommand}"/>
        <ToolbarItem Text="{helpers:Translate Delete}"
                     Order="Secondary"
                     Command="{Binding DeleteTestCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <ContentView Padding="5">
                <Frame x:Name="FrameSettings"
                       Padding="10,0,10,5"
                       BorderColor="#039BE5"
                       CornerRadius="10">
                    <StackLayout HorizontalOptions="FillAndExpand">
                        <Button x:Name="ButtonSettings"
                                Text="{helpers:Translate TestSettingsButton}"
                                Style="{StaticResource ButtonNormalStyle}"
                                Clicked="SettingsButton_OnClickedAsync"
                                WidthRequest="350"
                                CornerRadius="30"
                                Margin="12,10,12,0"/>
                        <TableView x:Name="SettingsTableView"
                                   Intent="Settings"
                                   VerticalOptions="FillAndExpand"
                                   BindingContext="{Binding GetSettingsModel}">
                        <TableRoot>
                            <TableSection Title="{helpers:Translate TestSettingsInfo}">
                                <ViewCell>
                                    <StackLayout Orientation="Horizontal"
                                                 Margin="9,0,0,0">
                                        <Label Text="{helpers:Translate TestSettingsName}"
                                               VerticalOptions="Center"/>
                                        <Entry Placeholder="{helpers:Translate TestSettingsNPlaceh}"
                                               HorizontalOptions="FillAndExpand"
                                               Text="{Binding Name}"/>
                                    </StackLayout>
                                </ViewCell>
                                <ViewCell>
                                    <StackLayout Orientation="Horizontal"
                                                 Margin="9,0,0,0">
                                        <Label Text="{helpers:Translate Subject}"
                                               VerticalOptions="Center"/>
                                        <Entry Placeholder="{helpers:Translate TestSettingsNPlaceh}"
                                               Text="{Binding Subject}"
                                               HorizontalOptions="FillAndExpand"/>
                                    </StackLayout>
                                    </ViewCell>
                            </TableSection>
                            <TableSection>
                                <ViewCell>
                                    <Grid ColumnSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{helpers:Translate TestSettingsTime}"
                                                VerticalOptions="Center"
                                                Margin="12,0,0,0"
                                                Grid.Column="0" Grid.Row="0"/>
                                        <TimePicker Time="{Binding TimeSpan}"
                                                    Format="HH:mm"
                                                    Margin="0"
                                                    Grid.Column="1" Grid.Row="0"/>
                                        <Label Text=":"
                                           FontSize="Medium"
                                           TextColor="{DynamicResource TextColor}"
                                           VerticalOptions="Center"
                                           Margin="0"
                                           Grid.Column="2" Grid.Row="0"/>
                                        <Entry Text="{Binding Seconds}"
                                           Margin="0"
                                           Keyboard="Numeric"
                                           Grid.Column="3" Grid.Row="0"/>
                                        </Grid>
                                    </ViewCell>
                                </TableSection>
                            </TableRoot>
                        </TableView>
                    </StackLayout>
                </Frame>
              </ContentView>
                <ListView Style="{StaticResource ListView}"
                      CachingStrategy="RecycleElement"
                          ItemSelected="ListViewFiles_OnItemSelected"
                          ItemTapped="ListViewFiles_OnItemTapped"
                          ItemsSource="{Binding GetInfoModels}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ContentView Padding="5">
                                    <Frame>
                                        <StackLayout HorizontalOptions="FillAndExpand"
                                                     VerticalOptions="FillAndExpand">
                                            <Label Text="{Binding Title}"
                                                   Style="{StaticResource LabelMainStyle}"/>
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="{helpers:Translate Price}"
                                                       Style="{StaticResource LabelSecondStyle}"/>
                                                <Label Text="{Binding Detail}"
                                                       HorizontalOptions="FillAndExpand"
                                                       Style="{StaticResource LabelSecondStyle}"/>
                                                <Label Text="{Binding Date}"
                                                       Style="{StaticResource LabelSecondStyle}"/>
                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>
                                </ContentView>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
              </ListView>

            <Grid BackgroundColor="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <BoxView HeightRequest="1"
                         Color="#B0BEC5"
                         Margin="6,0,6,0"
                         Grid.ColumnSpan="3"
                         Grid.Row="0" Grid.Column="0"/>
                <ImageButton Style="{StaticResource ImageButtonStyle}"
                             Source="{DynamicResource Exam}"
                             Command="{Binding CreateCheckTypePageCommand}"
                             Grid.Column="0" Grid.Row="1"/>
                <ImageButton Source="{DynamicResource Contract}"
                             Style="{StaticResource ImageButtonStyle}"
                             Command="{Binding CreateEntryTypePageCommand}"
                             Grid.Column="1" Grid.Row="1"/>
                <ImageButton Source="{DynamicResource Table}"
                             Style="{StaticResource ImageButtonStyle}"
                             Command="{Binding CreateStackTypePageCommand}"
                             Grid.Column="2" Grid.Row="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>